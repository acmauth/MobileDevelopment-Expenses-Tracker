<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_text_appearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--Style for top TextView titles - top_title.xml -->
    <style name="TitleTextView" parent="app_text_appearance">
        <item name="android:padding">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/orange_700</item>
    </style>

    <!-- Style for each Category Button - category_button.xml -->
    <style name="CategoryButton" parent="app_text_appearance">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/orange_700</item>
        <item name="android:backgroundTint">@color/orange_700</item>
    </style>

    <!-- Style of Categories TextViews - total_spend.xml -->
    <style name="CategoryTextView" parent="app_text_appearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange_700</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">42dp</item>
    </style>

    <!-- Style of Money TextViews - total_spend.xml-->
    <style name="MoneySpentTextView" parent="app_text_appearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Style of Transaction Category - transaction_categories_activity.xml-->
    <style name="TransactionType" parent="app_text_appearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Style for TextViews - initial_activity_xml-->
    <style name="InitialTextViews" parent="app_text_appearance">
        <item name="android:textColor">@color/orange_700</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>